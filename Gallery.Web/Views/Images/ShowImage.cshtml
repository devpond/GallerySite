@using System.Web.Mvc.Html
@model IEnumerable<Gallery.Web.ViewSubjectImage>

@{
    ViewBag.Title = "ShowImage";
}

@if (Model != null)
{
    using (Html.BeginForm("ShowImage","Images"))
    {
        @Html.DropDownList("subjectList", null, new { onchange = "submit()"})
        <input type='submit' value='Submit' />
    }
    
    foreach (var item in Model)
    {
        const string imgSetting = "?height=180";
        var img = item.Location + item.Filename;
        var imgSmall = img + imgSetting;
        //var img = item.Filename;
        //var loc = "/Assets/Images/" + img;
        <div class="singleImage" style="display: inline-block">
            @Html.ActionLink(item.Name, "Details", "Subject", new { id = item.SubjectID }, null)
            <br/>
            <a href="@img">
                <img src="@imgSmall" />
            </a>
        </div>
    }
}
else
{
    <h1>Nothing to see!</h1>
}